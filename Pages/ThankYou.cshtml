@page
@model ThankYouModel
@{
    ViewData["Title"] = "Quest Complete!";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow ancient-glow">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <div class="zelda-icon triforce" style="width: 80px; height: 80px; margin: 0 auto;"></div>
                    </div>
                    <h1 class="display-4 mb-4" style="color: var(--secondary-color);">Quest Complete!</h1>
                    <div class="quest-item mb-4">
                        <p class="lead mb-0">Your wisdom has been received and will help Cathy on her journey to become a master adventurer!</p>
                    </div>
                    <p>Your guidance will be treasured like a rare item in Cathy's inventory.</p>
                    <p class="mt-4 text-muted">May the Goddess Hylia smile upon your travels.</p>
                    
                    <div class="mt-5">
                        <a href="/" class="btn btn-sheikah">
                            <span class="zelda-icon sheikah"></span> Return to Main Quest
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
